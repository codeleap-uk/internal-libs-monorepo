{
 
  "eslint.alwaysShowStatus": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "eslint.format.enable": true,
  "[html]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "eslint.workingDirectories": [ "./apps/*", "./packages/common" ],
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "packages\\\\.*",
        "isAsync": true,
        "cmd": "yarn build"
      },
      {
        "match": "packages//.*",
        "isAsync": true,
        "cmd": "yarn build"
      }
    ]
  },
  "todohighlight.keywords": ["TODO","INFO", "NOTE", "NOTES", "FIXME", "HACK", "DISCUSS", "WTF"],
    "todohighlight.defaultStyle": {
      "color": "red",
      "border": "2px solid #aaa",
      "backgroundColor": "#faea00",
      "fontWeight": "bold",
      "borderRadius": "3px",
    }
  }
