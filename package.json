{
  "name": "codeleap",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "**/react",
      "**/react-native",
      "**/react-native/**",
      "**/@react-native-firebase/**",
      "**/@react-native-firebase/auth",
      "**/@react-native-firebase/auth/**",
      "**/@react-native-firebase/app",
      "**/@react-native-firebase/app/**",
      "**/*react-native*",
      "**/*react-native*/**",
      "**/react-native-image-crop-picker/**",
      "**/react-native-image-crop-picker"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:mobile": "turbo run dev:mobile --parallel",
    "dev:web": "turbo run dev:web --parallel",
    "dev:ios": "turbo run dev:ios --parallel",
    "dev:android": "turbo run dev:android --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest",
    "typedoc": "^0.22.10"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev:web": {
        "cache": false
      },
      "dev:ios": {
        "cache": false
      },
      "dev:android": {
        "cache": false
      },
      "dev:mobile": {
        "cache": false
      },
      "test": {
        "outputs": []
      }
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  }
}
