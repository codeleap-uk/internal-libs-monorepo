{
  "name": "codeleap",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "**/react",
      "**/react-native",
      "**/react-native/**",
      "**/@react-native-firebase/**",
      "**/@react-native-firebase/auth",
      "**/@react-native-firebase/auth/**",
      "**/@react-native-firebase/app",
      "**/@react-native-firebase/app/**",
      "**/*react-native*",
      "**/*react-native*/**",
      "**/react-native-image-crop-picker/**",
      "**/react-native-image-crop-picker",
      "**/@react-navigation/bottom-tabs",
      "**/@react-navigation/drawer",
      "**/@react-navigation/native",
      "**/@react-navigation/native-stack",
      "**/@react-navigation/core",
      "**/@react-navigation*/**",
      "**/@sentry*",
      "**/@sentry/react-native",
      "**/@sentry/browser",
      "**/@react-navigation*/**",
      "**/@react-navigation/routers"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:mobile": "turbo run dev:mobile --parallel",
    "dev:web": "turbo run dev:web --parallel",
    "dev:ios": "turbo run dev:ios --parallel",
    "dev:android": "turbo run dev:android --parallel",
    "dev:cli": "turbo run dev:cli",
    "dev:packages": "watchman-make -p \"packages/mobile/src/**/*.*\" \"packages/web/src/**/*.*\" \"packages/common/src/**/*.*\" --run \"yarn build\"",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clear": "rm -rf node_modules apps/mobile/node_modules apps/web/node_modules packages/common/node_modules packages/mobile/node_modules packages/web/node_modules"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest",
    "typedoc": "^0.22.10"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev:web": {
        "cache": false
      },
      "dev:ios": {
        "cache": false
      },
      "dev:android": {
        "cache": false
      },
      "dev:cli": {
        "cache": false
      },
      "dev:mobile": {
        "cache": false
      },
      "test": {
        "outputs": []
      },
      "publish": {
        "cache": false
      }
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.17"
}
