{
  "name": "codeleap",
  "version": "0.0.2",
  "private": true,
  "repository": "https://github.com/codeleap-uk/internal-libs-monorepo.git",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "node ./scripts/postInstall.js && bun run patch-package",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clear": "rm -rf node_modules apps/*/node_modules packages/*/node_modules packages/*/dist",
    "clear:dist": "rm -rf packages/*/dist",
     
    "web": "cd apps/web && bun",
    "mobile": "cd apps/mobile && bun",

    "common": "cd packages/common && bun",
    "styles": "cd packages/styles && bun",
    "cli": "cd packages/cli && bun",
    "config": "cd packages/config && bun",
    "fetch": "cd packages/fetch && bun",
    "logger": "cd packages/logger && bun",
    "analytics": "cd packages/analytics && bun",
    "auth": "cd packages/auth && bun",
    "form": "cd packages/form && bun",
    "hooks": "cd packages/hooks && bun",
    "i18n": "cd packages/i18n && bun",
    "modals": "cd packages/modals && bun",
    "query": "cd packages/query && bun",
    "types": "cd packages/types && bun",
    "utils": "cd packages/utils && bun",
    "store": "cd packages/store && bun",
    
    "p:web": "cd packages/web && bun",
    "p:mobile": "cd packages/mobile && bun",
    
    "prepare": "husky install",
    "commit": "node ./node_modules/cz-customizable/standalone.js",
    "release": "standard-version",
    "releaserc": "git rev-parse --abbrev-ref HEAD | standard-version --prerelease",
    "notifyVersion": "node notifyVersion.js",
    "lint-deps": "syncpack list-mismatches",
    "fix-deps": "syncpack fix-mismatches",
    "doc:generate": "clear && ts-node-dev ./docs/generator/main.ts",
    "doc:process": "clear && python ./docs/processor/main.py",
    "doc:fullcycle": "yarn doc:generate && yarn doc:process"
  },
  "devDependencies": {
    "cz-customizable": "^7.0.0",
    "husky": "^8.0.2",
    "install": "^0.13.0",
    "npm-license-crawler": "^0.2.1",
    "openai": "^4.6.0",
    "patch-package": "8.0.0",
    "prettier": "^2.5.1",
    "standard-version": "^9.5.0",
    "syncpack": "^9.8.4",
    "ts-node-dev": "^1.1.8",
    "typedoc": "0.25.1",
    "typedoc-json-parser": "^8.2.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "bun@1.1.33"
}
