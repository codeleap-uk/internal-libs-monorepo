        "../../apps/mobile/node_modules/@types/react/index.d.ts",
        "../../@types/react/index.d.ts"
      ],
      "react-native-super-grid": [
        "../../apps/mobile/node_modules/react-native-super-grid/index.d.ts"
      ],
